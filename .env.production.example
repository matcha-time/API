# Production Environment Variables Template
# Copy this file to .env.production and fill in the values

# === Database Configuration ===
POSTGRES_USER=matcha_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=matcha_db
POSTGRES_PORT=5432
DATABASE_URL=postgresql://matcha_user:CHANGE_ME_STRONG_PASSWORD@postgres:5432/matcha_db
DATABASE_MAX_CONNECTIONS=20

# === Server Configuration ===
PORT=3000
ENV=production

# === OAuth Configuration ===
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
REDIRECT_URL=https://your-domain.com/api/auth/google/callback

# === Security ===
# Generate with: openssl rand -base64 64
JWT_SECRET=your-jwt-secret-minimum-32-characters-with-high-entropy
COOKIE_SECRET=your-cookie-secret-minimum-64-characters-for-encryption

# === Frontend ===
FRONTEND_URL=https://your-domain.com
COOKIE_DOMAIN=.your-domain.com
ALLOWED_ORIGINS=https://your-domain.com

# === Rate Limiting ===
RATE_LIMIT_PER_SECOND=10
RATE_LIMIT_BURST_SIZE=50

# === Email Configuration (Optional) ===
SMTP_HOST=smtp.example.com
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@your-domain.com
SMTP_FROM_NAME=Matcha Time

# === Logging ===
RUST_LOG=info,tower_http=info,sqlx=warn

# === Monitoring (Optional) ===
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD

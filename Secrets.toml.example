# Shuttle Secrets Configuration
# Copy this file to Secrets.toml and fill in your actual values
# NOTE: Secrets.toml should be in .gitignore (do not commit!)

# JWT Configuration
JWT_SECRET = "your-secure-jwt-secret-here-min-32-chars"
JWT_EXPIRY_HOURS = "24"
REFRESH_TOKEN_EXPIRY_DAYS = "30"
OIDC_FLOW_EXPIRY_MINUTES = "10"

# Cookie Configuration
COOKIE_SECRET = "your-secure-cookie-secret-here-min-32-chars"

# Google OAuth Configuration
GOOGLE_CLIENT_ID = "your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET = "your-google-client-secret"
REDIRECT_URL = "https://matcha-time-api.shuttleapp.rs/api/auth/callback"

# Frontend Configuration
FRONTEND_URL = "https://your-frontend-url.com"
ALLOWED_ORIGINS = "https://your-frontend-url.com,http://localhost:3000"

# Environment
ENVIRONMENT = "production"

# Database (automatically provided by Shuttle, but you can override if needed)
# DATABASE_URL is set automatically by Shuttle
# DATABASE_MAX_CONNECTIONS = "10"

# Optional: SMTP Configuration (for email verification)
# SMTP_HOST = "smtp.gmail.com"
# SMTP_USERNAME = "your-email@gmail.com"
# SMTP_PASSWORD = "your-app-password"
# SMTP_FROM_EMAIL = "noreply@your-domain.com"
# SMTP_FROM_NAME = "Matcha Time"
